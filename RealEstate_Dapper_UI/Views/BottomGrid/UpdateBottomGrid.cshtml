@model RealEstate_Dapper_UI.Dtos.BottomGridDtos.UpdateBottomGrid
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h3 class="mb-3" style="text-align:center">Personel Güncelleme İşlemi</h3>

                <form method="post">
                    <input type="hidden" asp-for="BottomGridId" />
                    <label>Öne Çıkarılan Alan İcon</label>
                    <input type="text" class="form-control" value="@Model.Icon" asp-for="Icon" />
                    <br />

                    <label>Öne Çıkarılan Alan Başlık</label>
                    <input type="text" class="form-control" value="@Model.Title" asp-for="Title" />

                    <br />
                    <label>Öne Çıkarılan Alan Açıklama</label>
                    <input type="email" class="form-control" value="@Model.Description" asp-for="Description" />
                    <br />

                    <button class="btn btn-primary" style="border-radius:8px">Bilgileri Kaydet</button>
                </form>



            </div>
        </div>
    </div>


