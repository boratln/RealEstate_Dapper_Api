@using RealEstate_Dapper_UI.Dtos.BottomGridDtos
@model List<ResultBottomGrid>

<section class="w3l-bottom-grids py-5" id="steps">
    <div class="container py-lg-5 py-md-4 py-2">
        <div class="grids-area-hny main-cont-wthree-fea row">
            @foreach(var data in Model)
            {
                
            
            <div class="col-lg-4 col-md-6 grids-feature">
                <div class="area-box no-box-shadow">
                    <span class="@data.Icon"></span>
                    <h4><a href="#feature" class="title-head">@data.Title</a></h4>
                    <p>@data.Description</p>
                    <a href="#more" class="more">Daha fazlası için <span class="fa fa-long-arrow-right"></span> </a>
                </div>
            </div>
            }
        </div>
    </div>
</section>