@model List<RealEstate_Dapper_UI.Dtos.ProductDtos.ResultProductDtos>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori İlanları</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var data in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="property-single.html">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@data.Type</span><span>@data.categoryName</span></div>
                                <img class="img-fluid" style="width:700px;height:200px" src="@data.ProductCoverImage" alt="">
                                <div class="box-content">
                                    <h3 class="title">$@data.productPrice</h3>
                                    <span class="post"> @data.Address  @data.city @data.district</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }


            </div>
        </div>
</section>
