@model RealEstate_Dapper_UI.Dtos.WhoWeAreDto.UpdateWhoWeAreDetail
@{
    ViewData["Title"] = "UpdateWhoWeAreDetail";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h3 class="mb-3" style="text-align:center">@Model.Title Bilgilerini Güncelleme İşlemi</h3>

                <form method="post">
                    <input type="hidden" asp-for="WhoWeAreDetailId" />
                    <label>Biz Kimiz Başlık</label>
                    <input type="text" class="form-control" value="@Model.Title" asp-for="Title" />
                    <br />

                    <label>Biz Kimiz Alt Başlık</label>
                    <input type="text" class="form-control" value="@Model.SubTitle" asp-for="SubTitle" />

                    <br />
                    <label>Biz Kimiz Açıklama 1</label>
                    <input type="email" class="form-control" value="@Model.Description1" asp-for="Description1" />
                    <br />

                    <label>Biz Kimiz Açıklama 2</label>
                    <input type="tel" class="form-control" value="@Model.Description2" asp-for="Description2" />
                   
                    <br />
                    <button class="btn btn-primary" style="border-radius:8px">Bilgileri Kaydet</button>
                </form>



            </div>
        </div>
    </div>


