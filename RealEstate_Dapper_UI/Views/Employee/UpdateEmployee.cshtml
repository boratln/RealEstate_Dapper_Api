@model RealEstate_Dapper_UI.Dtos.EmployeeDtos.UpdateEmployeeDto
@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h3 class="mb-3" style="text-align:center">Personel Güncelleme İşlemi</h3>

                <form method="post">
                    <input type="hidden" asp-for="EmployeeId" />
                    <label>Personel Ad Soyad</label>
                    <input type="text" class="form-control" value="@Model.EmployeeName" asp-for="EmployeeName" />
                    <br />

                    <label>Personel Ünvanı</label>
                    <input type="text" class="form-control" value="@Model.EmployeeTitle" asp-for="EmployeeTitle" />
                    
                    <br />
                    <label>Personel Mail Adresi</label>
                    <input type="email" class="form-control" value="@Model.EmployeeMail" asp-for="EmployeeMail" />
                    <br />

                    <label>Personel Telefon Numarası</label>
                    <input type="tel" class="form-control" value="@Model.EmployeephoneNumber" asp-for="EmployeephoneNumber" />
                    <br />
                    <label>Personel Fotoğrafı</label>
                    <input type="text" class="form-control" value="@Model.EmployeeImageUrl" asp-for="EmployeeImageUrl" />
                    <br />
                    <button class="btn btn-primary" style="border-radius:8px">Personel Güncelle</button>
                </form>



            </div>
        </div>
    </div>

