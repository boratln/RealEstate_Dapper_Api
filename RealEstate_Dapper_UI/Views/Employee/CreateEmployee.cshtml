@model RealEstate_Dapper_UI.Dtos.EmployeeDtos.CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">

                <h6 class="mb-4">Personel Ekleme Sayfası</h6>
                <form method="post">
                    <label>Personel Ad Soyad</label>
                    <input type="text" asp-for="EmployeeName" class="form-control" />
                    <br />
                    <label>Personel Ünvan</label>
                    <input type="text" asp-for="EmployeeTitle" class="form-control" />
                    <br />
                    <label>Personel Mail Adresi</label>
                    <input type="email" asp-for="EmployeeMail" class="form-control" />
                    <br />
                    <label>Personel Telefon Numarası</label>
                    <input type="tel" asp-for="EmployeephoneNumber" class="form-control" />
                    <br />
                    <label>Personel Fotoğraf</label>
                    <input type="text" asp-for="EmployeeImageUrl" class="form-control" />
                    <button class="btn btn-primary" style="border-radius:8px">Personel Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

